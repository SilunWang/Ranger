<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="已保存"
                        android:textSize="20sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/id_tracking_result_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_gravity="right|center"
                    android:text="查看"
                    android:textSize="20sp"
                    android:textColor="@color/bottom_bar_tv_color_clicked"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ffececec"
            android:layout_marginBottom="20dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享至："
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp">
                <ImageButton
                        android:id="@+id/id_weixin_share"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/share_weixin"
                        android:background="#00000000"
                        android:layout_marginRight="10dp"/>
                <ImageButton
                        android:id="@+id/id_weibo_share"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/share_weibo"
                        android:background="#00000000"/>
                <Button
                        android:id="@+id/id_other_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="其他..."
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:background="@android:color/white"/>
            </LinearLayout>


    </LinearLayout>


</LinearLayout>