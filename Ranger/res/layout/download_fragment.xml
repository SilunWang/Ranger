<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/download_fragment"
              tools:context=".MainActivity">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF">

        <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/add_user_xxl"
                android:id="@+id/uer_left_menu_alltrace"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="离线下载"
                android:textSize="28sp"
                android:textColor="#999999"
                android:layout_gravity="center"/>

        <Button
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/title_bar_menu_on"
                android:id="@+id/function_right_menu_alltrace"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"/>
    </FrameLayout>

    <ListView
            android:id="@+id/download_listView_id"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>